{
  "languageserver.golang": {
    "command": "gopls",
    "filetypes": [
      "go"
    ]
  },
  "go.goplsOptions": {
    "buildFlags": [
      "-tags=integration,unit,functional"
    ],
    "env": {
      "GO111MODULE": "on"
    }
  },
  "explorer.file.showHiddenFiles": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.keyMappings": {
    "s": "open:vsplit",
    "mm": "rename",
    "mc": "copyFile",
    "C": "copyFile",
    "md": "delete",
    "D": "delete",
    "ma": "addFile",
    "mA": "addDirectory"
  },
  "workspace.ignoredFolders": [
    "$HOME",
    "$HOME/.cargo/**",
    "$HOME/.rustup/**"
  ]
}
